{
  "name": "metrostore",
  "productName": "Metrostore - Modern inventory management",
  "description": "A modern store inventory management software for local retailers and vendors",
  "author": {
    "name": "AilenTech Inc, Ghana",
    "email": "ailentech@gmail.com",
    "url": "https://www.ailentech.com"
  },
  "private": true,
  "version": "0.1.0",
  "main": "electron/main.js",
  "repository": "https://Danquah@bitbucket.org/ailens/metrostore-desktop.git",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve -o",
    "sync": "browser-sync http://localhost:4200",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron:run-win": "electron ./electron/main.js",
    "electron:prepare-deploy": "npm run electron:pre-win",
    "electron:pre": "mkdir -p dist/electron/ && cp src/electron/* dist/electron/",
    "electron:pre-win": "xcopy .\\src\\electron\\* .\\dist\\electron\\ /e",
    "watch:prod": "ng build --prod --watch",
    "watch:prod-aot": "ng build --prod --watch --aot",
    "watch:dev": "ng build  --configuration=dev --watch",
    "watch:dev-aot": "ng build  --configuration=dev --watch --aot",
    "watch:electron": "ng build --prod --configuration=electron  --base-href=./ --output-path=dist/electron/ --watch",
    "watch:electron-aot": "ng build --prod --configuration=electron  --base-href=./ --output-path=dist/electron/ --watch --aot",
    "build:prod": "ng build --prod --environment=prod",
    "build:prod-aot": "ng build --prod --environment=prod --aot",
    "build:dev": "ng build  --configuration=dev",
    "build:dev-aot": "ng build  --configuration=dev --aot",
    "build:electron": "ng build --prod --configuration=electron  --base-href=./ --output-path=dist/electron/",
    "build:electron-aot": "ng build --prod --configuration=electron  --base-href=./  --aot",
    "pack:electron": "electron-packager ./dist/electron \"Metrostore Setup\" --overwrite --prune=true --out=dist",
    "pack:electron-mac": "npm run electron:pre && npm run pack:electron -- --platform=darwin --arch=x64 --icon=src/electron/app.icns",
    "pack:electron-win64": "npm run electron:pre-win && npm run pack:electron -- --platform=win32 --arch=x64 --icon=src/electron/app.ico",
    "pack:electron-win32": "npm run electron:pre-win && npm run pack:electron -- --platform=win32 --arch=ia32 --icon=src/electron/app.ico",
    "pack:electron-linux64": "npm run electron:pre && npm run pack:electron -- --platform=linux --arch=x64 --icon=src/electron/app.ico",
    "pack:electron-linux32": "npm run electron:pre && npm run pack:electron -- --platform=linux --arch=ia32 --icon=src/electron/app.ico",
    "pack": "build --dir",
    "publish": "run-s build:electron-aot release",
    "release": "build",
    "firebase:deploy": "firebase deploy",
    "host": "run-s build:electron-aot firebase:deploy"
  },
  "build": {
    "appId": "com.ailentech.metrostore",
    "files": [
      "electron/main.js",
      "build"
    ],
    "directories": {
      "output": "./dist"
    },
    "win": {
      "icon": "electron/app.ico",
      "target": "nsis"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "danquahwhite",
        "repo": "metrostore",
        "token": "4383f907cca0eca8a0f13004c0d12233a777620e"
      }
    ]
  },
  "dependencies": {
    "@angular/animations": "^6.0.2",
    "@angular/cdk": "^6.1.0",
    "@angular/common": "^6.0.2",
    "@angular/compiler": "^6.0.2",
    "@angular/core": "^6.0.2",
    "@angular/flex-layout": "^6.0.0-beta.15",
    "@angular/forms": "^6.0.2",
    "@angular/http": "^6.0.2",
    "@angular/material": "^6.1.0",
    "@angular/platform-browser": "^6.0.2",
    "@angular/platform-browser-dynamic": "^6.0.2",
    "@angular/pwa": "^0.6.8",
    "@angular/router": "^6.0.2",
    "@angular/service-worker": "^6.0.2",
    "@types/jquery": "^3.3.2",
    "angular2-universal": "^2.1.0-rc.1",
    "angularfire2": "^5.0.0-rc.10",
    "body-parser": "^1.18.3",
    "browser-sync": "^2.24.5",
    "core-js": "^2.5.4",
    "electron-log": "^2.2.14",
    "electron-updater": "^2.21.10",
    "express": "^4.16.3",
    "firebase": "^5.0.4",
    "font-awesome": "^4.7.0",
    "fullcalendar": "^3.9.0",
    "hammerjs": "^2.0.8",
    "jquery": "^3.3.1",
    "jquery-fullscreen-plugin": "^1.0.0",
    "material-design-icon-fonts": "^3.0.1",
    "metro4-dist": "^4.2.7",
    "ngrok": "^3.0.1",
    "preboot": "^6.0.0-beta.4",
    "rxjs": "^6.2.0",
    "rxjs-compat": "^6.2.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.3",
    "@angular/cli": "~6.0.3",
    "@angular/compiler-cli": "^6.0.2",
    "@angular/language-service": "^6.0.2",
    "@types/express": "^4.16.0",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^8.9.5",
    "asar": "^0.14.3",
    "cash-cp": "^0.2.0",
    "cash-mkdir": "^0.2.0",
    "codelyzer": "~4.2.1",
    "cpx": "^1.5.0",
    "electron": "2.0.2",
    "electron-builder": "^20.15.1",
    "electron-packager": "^12.1.0",
    "firebase-cli": "^1.2.0",
    "firebase-tools": "^3.19.3",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~1.4.2",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "npm-run-all": "^4.1.3",
    "protractor": "~5.3.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  }
}
